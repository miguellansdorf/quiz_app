doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title}: Quiz App
    link(href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.0/bootstrap-table.min.css', rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.43/css/bootstrap-datetimepicker.min.css', rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/angularjs-datepicker/2.1.8/angular-datepicker.min.css', rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/angular-bootstrap-datetimepicker/1.1.3/css/datetimepicker.min.css', rel='stylesheet')
    link(href='https://cdn.rawgit.com/angular-ui/bower-ui-grid/master/ui-grid.min.css', rel='stylesheet')
    link(href='http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css', rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css', rel='stylesheet')
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-touch.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-animate.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-aria.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-messages.min.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-sanitize/1.6.4/angular-sanitize.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/ng-csv/0.3.6/ng-csv.min.js')
  body
    if user
      nav.navbar.navbar-inverse.navbar-fixed-top.animated.fadeInDown#main-toolbar
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Quiz App
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li(class={active: title === "Dashboard"})
                a(href='/') Dashboard
              li.dropdown(class={active: title.indexOf("Test") != -1})
                a.dropdown-toggle(href="#", data-toggle="dropdown") Tests
                  b.caret
                ul.dropdown-menu
                  li(class={active: title === "Take Test"})
                    a(href='/take-test') Take Test
                  if user.role_id != 1
                    li(class={active: title === "Create Questions/Tests"})
                      a(href='/create-test') Create Questions/Tests
                    li(class={active: title === "Edit Questions/Tests"})
                      a(href='/edit-test') Edit Questions/Tests
              li(class={active: title === "Statistics"})
                a(href='/statistics') Statistics
              if user.role_id != 1
                li(class={active: title === "User Management"})
                  a(href='/users') Users
              li.active.dropdown 
                a.dropdown-toggle(href='#', data-toggle="dropdown")= user.firstname + " " + user.lastname
                ul.dropdown-menu
                  li
                    a(href="#")= user.name
                  li(class={active: title === "Change Password"})
                    a(href='/change-password') Change password
                  li
                    a(href='/logout') Logout
    .container
    script(src='https://code.jquery.com/jquery-3.1.1.min.js', integrity='sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.0/bootstrap-table.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.0/bootstrap-table-locale-all.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.43/js/bootstrap-datetimepicker.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angularjs-datepicker/2.1.8/angular-datepicker.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/2.5.0/ui-bootstrap-tpls.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-bootstrap-datetimepicker/1.1.3/js/datetimepicker.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-bootstrap-datetimepicker/1.1.3/js/datetimepicker.templates.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/12.2.13/ng-file-upload.min.js')
    script(src='https://cdn.rawgit.com/angular-ui/bower-ui-grid/master/ui-grid.min.js')
    //- script(src='http://ui-grid.info/docs/grunt-scripts/csv.js')
    //- script(src='http://ui-grid.info/docs/grunt-scripts/pdfmake.js')
    //- script(src='http://ui-grid.info/docs/grunt-scripts/vfs_fonts.js')
    script(src='/javascripts/custom-functions.js')
  body
    block content
